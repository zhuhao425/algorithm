<?xml version="1.0"?>
        <!--
            - Base      : kobuki
            - Stacks    : hexagons
            - 3d Sensor : hokuyo
        -->
<robot name="turtlebot" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find myrobot)/urdf/turtlebot_common_library.urdf.xacro" />
  <xacro:include filename="$(find kobuki_description)/urdf/kobuki.urdf.xacro" />
  <xacro:include filename="$(find myrobot)/urdf/stacks/hexagons.urdf.xacro"/>
  <xacro:include filename="$(find myrobot)/urdf/sensors/hokuyo.urdf.xacro" />
  <xacro:include filename="$(find myrobot)/urdf/turtlebot_gazebo.urdf.xacro" />

  <kobuki/>
  <stack_hexagons parent="base_link" />
  <sensor_hokuyo  parent="base_link" />
</robot>
